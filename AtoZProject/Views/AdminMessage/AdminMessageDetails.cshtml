@model EntityLayer.Concrete.WriterMessage

@{
    ViewData["Title"] = "AdminMessageDetails";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Mesaj Detay Sayfası</h4>
			<form class="forms-sample">
				<div class="form-group" hidden>
					<label>ID</label>
					@Html.TextBoxFor(x => x.WriterMessageId, new { @class = "form-control", @readonly = "readonly", style = "color: black;" })
				</div>
				<div class="form-group">
					<label>Başlık</label>
					@Html.TextBoxFor(x => x.Subject, new { @class = "form-control", @readonly = "readonly", style = "color: black;" })
				</div>
				<div class="form-group">
					<label>Gönderen</label>
					@Html.TextBoxFor(x => x.SenderName, new { @class = "form-control", @readonly = "readonly", style = "color: black;" })
				</div>
				<div class="form-group">
					<label>Alıcı</label>
					@Html.TextBoxFor(x => x.ReceiverName, new { @class = "form-control", @readonly = "readonly", style = "color: black;" })
				</div>
				<div class="form-group">
					<label>Tarih</label>
					@Html.TextBoxFor(x => x.Date, new { @class = "form-control", @readonly = "readonly", style = "color: black;" })
				</div>
				<div class="form-group">
					<label>Mesaj</label>
					@Html.TextAreaFor(x => x.MessageContent, 6, 3, new { @class = "form-control", @readonly = "readonly", style = "color: black;" })
				</div>
				<a asp-action="ReceiverMessageList" type="submit" class="btn btn-warning mr-2">Gelen Mesajlar</a>
				<a asp-action="SenderMessageList" type="submit" class="btn btn-success mr-2">Gönderilmiş Mesajlar</a>
			</form>
		</div>
	</div>
</div>

