@using EntityLayer.Concrete
@model List<Portfolio>

<div class="row ">
	<div class="col-12 grid-margin">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Projeler</h4>
				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th> # </th>
								<th> Ana Görsel </th>
								<th> Proje Adı </th>
								<th> URL </th>
								<th> Fiyat </th>
								<th> Tamamlanma Oranı </th>
								<th> Durum </th>
							</tr>
						</thead>
						<tbody>
							@{
								int counter = 1;
								@foreach (var item in Model)
								{
									<tr>
										<td>@counter</td>
										<td><img src="@item.ProjectUrl"></td>
										<td>@item.Name</td>
										<td>@item.ImageUrl></td>
										<td>@item.Price</td>
										<td>%@item.Value</td>
										<td>
											<div class="badge badge-outline-success">Approved</div>
										</td>
									</tr>
									counter++;
								}
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
