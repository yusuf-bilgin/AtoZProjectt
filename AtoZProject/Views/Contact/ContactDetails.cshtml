@model EntityLayer.Concrete.Message
@{
	ViewData["Title"] = "ContactDetails";
	Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Mesaj Detay Sayfası</h4>
			<form class="forms-sample">
				<div class="form-group" hidden>
					<label>ID</label>
					@Html.TextBoxFor(x => x.MessageId, new { @class = "form-control", @readonly = "readonly", style = "color: black;" })
				</div>
				<div class="form-group">
					<label>Başlık</label>
					@Html.TextBoxFor(x => x.Name, new { @class = "form-control", @readonly = "readonly", style = "color: black;" })
				</div>
				<div class="form-group">
					<label>Tarih</label>
					@Html.TextBoxFor(x => x.Mail, new { @class = "form-control", @readonly = "readonly", style = "color: black;" })
				</div>
				<div class="form-group">
					<label>Görsel URL</label>
					@Html.TextBoxFor(x => x.Date, new { @class = "form-control", @readonly = "readonly", style = "color: black;" })
				</div>
				<div class="form-group">
					<label>Açıklama</label>
					@Html.TextAreaFor(x => x.Content, 6, 3, new { @class = "form-control", @readonly = "readonly", style = "color: black;" })
				</div>
				<a asp-action="Index" type="submit" class="btn btn-primary mr-2">Geri Dön</a>
			</form>
		</div>
	</div>
</div>


