@using EntityLayer.Concrete
@model List<WriterMessage>

@{
    ViewData["Title"] = "SenderMessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";

	int counter = 1;
}

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Gönderilmiş Öğeler</h4>
			<div class="table-responsive">
				<table class="table">
					<thead>
						<tr>
							<th>#</th>
							<th>Konu</th>
							<th>Alıcı</th>
							<th>Tarih</th>
							<th>Detaylar</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<th>@counter</th>
								<td>@item.Subject</td>
								<td>@item.ReceiverName</td>
								<td>@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</td>
								<td><a href="/Writer/Message/SenderMessageDetails/@item.WriterMessageId" class="btn btn-outline-primary">Mesajı Göster</a></td>
							</tr>
							counter++;
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>


